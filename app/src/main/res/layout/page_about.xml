<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App Logo -->
        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_karotz_dark"
            android:contentDescription="@string/app_name"/>

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="@string/about_app_name"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <!-- Version -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="@string/about_version"
            android:textSize="14sp"
            android:textColor="#888888"/>

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/about_description"
            android:textSize="14sp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="#DDDDDD"/>

        <!-- Developer Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_developer_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_developer_name"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textWebsite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_website"
            android:textSize="14sp"
            android:textColor="#1E88E5"
            android:layout_marginTop="4dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="#DDDDDD"/>

        <!-- Credits Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_credits_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_credits_original"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/textOriginalAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_original_author"
            android:textSize="14sp"
            android:textColor="#1E88E5"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/textOpenKarotz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_openkarotz_link"
            android:textSize="14sp"
            android:textColor="#1E88E5"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_credits_ai"
            android:textSize="14sp"
            android:layout_marginTop="12dp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="#DDDDDD"/>

        <!-- License -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_license_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_license"
            android:textSize="14sp"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="#DDDDDD"/>

        <!-- Action Buttons -->
        <Button
            android:id="@+id/buttonContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_contact_button"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/buttonWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_website_button"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/buttonSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_support_button"
            android:layout_marginBottom="24dp"/>

        <!-- Copyright -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/about_copyright"
            android:textSize="12sp"
            android:textColor="#888888"
            android:gravity="center"/>

    </LinearLayout>

</ScrollView>