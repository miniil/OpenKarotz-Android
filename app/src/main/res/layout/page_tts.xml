<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Voice selection -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tts_voice_label"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerVoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@android:drawable/btn_dropdown"
        android:padding="12dp"/>

    <!-- Text input -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tts_text_label"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/editTextTts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="120dp"
        android:gravity="top|start"
        android:hint="@string/tts_text_hint"
        android:inputType="textMultiLine|textCapSentences"
        android:maxLength="200"
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:layout_marginBottom="8dp"/>

    <!-- Character counter -->
    <TextView
        android:id="@+id/textCharCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="0/200"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginBottom="24dp"/>

    <!-- Speak button -->
    <Button
        android:id="@+id/buttonSpeak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tts_speak_button"
        android:textSize="18sp"
        android:padding="16dp"/>

</LinearLayout>